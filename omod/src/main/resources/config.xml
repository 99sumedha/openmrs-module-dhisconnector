<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">

	<!-- Module Properties -->
	<id>${project.parent.artifactId}</id>
	<name>${project.parent.name}</name>
	<version>${project.parent.version}</version>
	<package>${project.parent.groupId}.${project.parent.artifactId}</package>
	<author>Jembi</author>
	<description>
		${project.parent.description}
	</description>
	<updateURL>https://modules.openmrs.org/modules/download/${project.parent.artifactId}/update.rdf</updateURL>
	<require_version>${openMRSVersion}</require_version>
	<!-- / Module Properties -->

	
	<!-- Required Modules -->
	<require_modules>
		<require_module>org.openmrs.module.reportingrest</require_module>
		<require_module>org.openmrs.module.reporting</require_module>
	</require_modules>
	<!-- / Required Modules -->
	
	<!-- Module Activator -->
	<activator>${project.parent.groupId}.${project.parent.artifactId}.DHISConnectorActivator</activator>
	
	
	<!-- Adds link to admin page -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>${project.parent.groupId}.${project.parent.artifactId}.extension.html.AdminList</class>
	</extension>
	
	<!-- Maps hibernate file's, if present -->
	<mappingFiles>
				
	</mappingFiles>

	<!-- Global properties -->
	<globalProperty>
		<property>${project.parent.artifactId}.url</property>
		<defaultValue>http://localhost:8080/dhis</defaultValue>
		<description>
			DHIS Server URL.
		</description>
	</globalProperty>
	<globalProperty>
		<property>${project.parent.artifactId}.user</property>
		<defaultValue>admin</defaultValue>
		<description>
			DHIS Username.
		</description>
	</globalProperty>
	<globalProperty>
		<property>${project.parent.artifactId}.pass</property>
		<defaultValue>district</defaultValue>
		<description>
			DHIS Password.
		</description>
	</globalProperty>
	<globalProperty>
		<property>dhisreporting.config.dxfToAdxSwitch</property>
		<defaultValue>false</defaultValue>
		<description>
			true/false whether or not to use the DXF to ADX conversion before sending data to DHIS2
		</description>
	</globalProperty>

	<!-- Internationalization -->
	<!-- All message codes should start with ${project.parent.artifactId}. -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->

</module>

